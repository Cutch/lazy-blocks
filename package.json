{
  "name": "lazy-blocks",
  "title": "Lazy Blocks",
  "version": "2.3.1",
  "description": "No hassle Gutenberg blocks for WordPress developers",
  "license": "GPL-2.0",
  "author": "nK <https://nkdev.info>",
  "scripts": {
    "build": "wpeg --build",
    "dev": "wpeg --build --watch",
    "production": "npm run make-pot && npm run make-json && wpeg --build --zip",
    "php-lint": "composer phpcs",
    "php-lint-fix": "composer phpcbf",
    "css-lint": "stylelint --syntax scss \"src/**/*.scss\"",
    "css-lint-fix": "stylelint --fix --syntax scss \"src/**/*.scss\"",
    "js-lint": "eslint --ext .js src/",
    "js-lint-fix": "eslint --ext .js --fix src/",
    "make-pot": "composer wp -- i18n make-pot ./src ./src/languages/lazy-blocks.pot --skip-audit --exclude=vendor,vendors,node_modules --headers='{\"Last-Translator\":\"nK\",\"Report-Msgid-Bugs-To\":\"https://github.com/nk-o/lazyblocks/issues\"}'",
    "make-json": "po2json ./src/languages/lazy-blocks.pot ./src/languages/lazy-blocks.json --format=jed1.x --pretty --domain=@@text_domain",
    "update-git-hooks": "npx simple-git-hooks",
    "postinstall": "composer install"
  },
  "devDependencies": {
    "@babel/node": "^7.13.13",
    "@babel/plugin-proposal-object-rest-spread": "^7.13.8",
    "@babel/plugin-transform-react-jsx": "^7.13.12",
    "@babel/preset-env": "^7.14.1",
    "@babel/register": "^7.13.16",
    "@svgr/webpack": "^5.5.0",
    "base64-inline-loader": "^1.1.1",
    "eslint-config-nk": "^0.0.20",
    "json-file": "^0.1.0",
    "lint-staged": "^10.5.4",
    "md5": "^2.3.0",
    "micromatch": "^4.0.4",
    "po2json": "^0.4.5",
    "simple-git-hooks": "^2.4.1",
    "stylelint-config-nk": "^0.0.13",
    "wpeg": "^1.2.4"
  },
  "dependencies": {
    "@wordpress/base-styles": "^3.4.3",
    "ace-builds": "^1.4.12",
    "array-move": "^3.0.1",
    "classnames": "^2.3.1",
    "clipboard-polyfill": "^3.0.3",
    "deep-equal": "^2.0.5",
    "gutenberg-react-select-styles": "0.0.2",
    "react-ace": "^9.4.0",
    "react-select": "^4.3.0",
    "react-sortable-hoc": "^2.0.0",
    "react-virtualized": "^9.22.3",
    "shorthash": "0.0.2",
    "slugify": "^1.5.1",
    "throttle-debounce": "^3.0.1"
  }
}
